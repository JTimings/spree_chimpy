<div id ="checkout_errors">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @subscriber } %>
</div>
<div class="alt_body_background">
  <div class="container">
    <div class="row">

      <div class="col-sm-10 col-sm-offset-1">

        <div id="subscriber-settings-panel" class="col-sm-6 panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title caps"><%= Spree.t(:email_preferences).upcase %></h3>
          </div>
          <div id="subscriber-settings" class="panel-body">
            <div id="subscriber-settings-wrapper">
              <%= form_for Spree::Chimpy::Subscriber.new, :as => @subscriber, :url => chimpy_subscriber_settings_path(@subscriber.access_token), :method => :put do |f| %>            
                <div>
                  <p id="weekly_email_checkbox" class="checkbox">
                    <%= f.check_box :receive_menu, :class => 'form-control' %>
                    <%= f.label :receive_menu, Spree.t(:receive_weekly_menu) %>
                  </p>
                  <p class="checkbox">
                    <%= f.check_box :subscribed, :class => 'form-control' %>
                    <%= f.label :subscribed, Spree.t(:subscribed_label, scope: :chimpy) %>
                  </p>
                  <%= f.hidden_field :language, :value => I18n.locale.to_s %>
                </div>
                <div id="subscriber_settings_update_btn_row" class="row">
                 <%= f.submit Spree.t(:update).upcase, :class => 'btn btn-custom caps pull-right',:id => 'subscriber_settings_update_btn' %>
                </div>     
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>